<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!--
        <property scope="context" name="logFilePath" value="/data/logs/movie-dubbo-provider" />
    -->
        <property scope="context" name="logFilePath" value="/Users/pan/myfile/intellij/movie-services/logs" />


	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %X{userId} %X{req.requestURI} [%t] %-5p [%c:%L] - %m%n</pattern>
		</encoder>
	</appender>
	
	<appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${logFilePath}/movie-dubbo-provider.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logFilePath}/movie-dubbo-provider-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>15</maxHistory> 
		</rollingPolicy>
		<encoder>
			<pattern>%d %X{userId} %X{req.requestURI} [%t] %-5p [%c:%L] - %m%n</pattern>
		</encoder>
		<append>true</append>  
   		<prudent>false</prudent>  
       <!--  <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy" /> -->
	</appender>

	<root level="INFO">
		<appender-ref ref="console" />
		<appender-ref ref="rollingFile" />
	</root>

</configuration>